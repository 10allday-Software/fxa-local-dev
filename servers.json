{
  "apps": [
    {
      "name": "auth-server local mail helper",
      "script": "test/mail_helper.js",
      "cwd": "fxa-auth-server",
      "env": {
        "NODE_ENV": "dev"
      },
      "max_restarts": "1",
      "min_uptime": "2m"
    },
    {
      "name": "auth-server db memory PORT 8000",
      "script": "node_modules/fxa-auth-db-mysql/bin/mem.js",
      "cwd": "fxa-auth-server",
      "env": {
        "NODE_ENV": "dev"
      },
      "max_restarts": "1",
      "min_uptime": "2m"
    },
    {
      "name": "auth-server key server PORT 9000",
      "script": "bin/key_server.js",
      "cwd": "fxa-auth-server",
      "env": {
        "NODE_ENV": "dev",
        "IP_ADDRESS": "0.0.0.0",
        "CUSTOMS_SERVER_URL": "http://127.0.0.1:7000",
        "SIGNIN_UNBLOCK_FORCED_EMAILS": "^block.*@restmail\\.net$",
        "SIGNIN_CONFIRMATION_ENABLED": "true",
        "SIGNIN_CONFIRMATION_FORCE_EMAIL_REGEX": "^sync.*@restmail\\.net$"
      },
      "max_restarts": "1",
      "min_uptime": "2m"
    },
    {
      "name": "content-server PORT 3030",
      "script": "node_modules/.bin/grunt",
      "args": ["server"],
      "cwd": "fxa-content-server",
      "env": {
        "NODE_ENV": "development"
      },
      "max_restarts": "1",
      "min_uptime": "2m"
    },
    {
      "name": "redis PORT 6379",
      "script": "_scripts/redis.sh",
      "env": {
        "PORT": "6379"
      },
      "max_restarts": "1",
      "min_uptime": "2m"
    },
    {
      "name": "memcached PORT 11211",
      "script": "_scripts/memcached.sh",
      "max_restarts": "1",
      "min_uptime": "2m"
    },
    {
      "name": "customs PORT 7000",
      "script": "bin/customs_server.js",
      "cwd": "fxa-customs-server",
      "env": {
        "NODE_ENV": "dev"
      },
      "max_restarts": "1",
      "min_uptime": "2m"
    }
  ]
}
